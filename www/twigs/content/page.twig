{% endblock favicons %}

{% block head %}
    {% block meta %}
    {% endblock meta %}

    {% block links %}
        <link rel="stylesheet" href="{{assets}}/css/base.css">  {# + #}
    {% endblock links %}

    {% block type %}
    {% endblock type %}

    {% block css %}
    {% endblock css %}
